using UnityEngine;

[System.Serializable]
public class ScenarioDefinition
{
    public string id;                  // Ø´Ù†Ø§Ø³Ù‡ Ø§Ù†Ú¯Ù„ÛŒØ³ÛŒ Ø³Ù†Ø§Ø±ÛŒÙˆ (Ù…Ø«Ù„Ø§Ù‹ "detective")
    public string displayName;         // Ù†Ø§Ù… ÙØ§Ø±Ø³ÛŒ Ø³Ù†Ø§Ø±ÛŒÙˆ (Ù…Ø«Ù„Ø§Ù‹ "Ø¨Ø§Ø²Ù¾Ø±Ø³")
    public Sprite icon;                // Ø¢ÛŒÚ©ÙˆÙ† Ø³Ù†Ø§Ø±ÛŒÙˆ
    public RoleData[] allowedRoles;    // ÙÙ‚Ø· Ø§ÛŒÙ† Ù†Ù‚Ø´â€ŒÙ‡Ø§ Ø¯Ø± Ø§ÛŒÙ† Ø³Ù†Ø§Ø±ÛŒÙˆ ÙØ¹Ø§Ù„ Ù‡Ø³ØªÙ†Ø¯
}
public class ScenarioBuilder : MonoBehaviour
{
    public ScenarioDefinition currentScenario;
    public Transform roleGridParent;
    public GameObject roleCardPrefab;

    void Start()
    {
        DisplayScenarioRoles();
    }

    void DisplayScenarioRoles()
    {
        foreach (Transform child in roleGridParent)
            Destroy(child.gameObject);

        foreach (var role in currentScenario.allowedRoles)
        {
            GameObject card = Instantiate(roleCardPrefab, roleGridParent);
            card.transform.Find("RoleName").GetComponent<Text>().text = role.displayName;
            card.transform.Find("RoleIcon").GetComponent<Image>().sprite = role.icon;
            // Ø¯Ú©Ù…Ù‡â€ŒÙ‡Ø§ÛŒ + Ùˆ â€“ Ùˆ Ø´Ù…Ø§Ø±Ø´ Ø±Ø§ Ù‡Ù… Ø§Ø¶Ø§ÙÙ‡ Ú©Ù†
        }
    }
}
public class PlayerInfo
{
    public string playerId;
    public string playerName;
    public Sprite avatar;
    public RoleData assignedRole;
}

public class GameSetup
{
    public ScenarioDefinition scenario;
    public List<RoleData> selectedRoles; // ØªÚ©Ø±Ø§Ø± Ø´Ø¯Ù‡ Ø¨Ø± Ø§Ø³Ø§Ø³ ØªØ¹Ø¯Ø§Ø¯
    public List<PlayerInfo> players;
}
public List<PlayerInfo> AssignRolesToPlayers(GameSetup setup)
{
    List<RoleData> rolesToAssign = new List<RoleData>(setup.selectedRoles);
    List<PlayerInfo> result = new List<PlayerInfo>();

    // Shuffle roles
    for (int i = 0; i < rolesToAssign.Count; i++)
    {
        int rand = Random.Range(i, rolesToAssign.Count);
        (rolesToAssign[i], rolesToAssign[rand]) = (rolesToAssign[rand], rolesToAssign[i]);
    }

    for (int i = 0; i < setup.players.Count; i++)
    {
        setup.players[i].assignedRole = rolesToAssign[i];
        result.Add(setup.players[i]);
    }

    return result;
}
public class GameManager : MonoBehaviour
{
    public GameSetup currentSetup;

    public void StartGame()
    {
        var assignedPlayers = AssignRolesToPlayers(currentSetup);

        foreach (var player in assignedPlayers)
        {
            Debug.Log($"Ø¨Ø§Ø²ÛŒÚ©Ù† {player.playerName} Ù†Ù‚Ø´ {player.assignedRole.displayName} Ú¯Ø±ÙØª");
            // Ù†Ù…Ø§ÛŒØ´ Ù†Ù‚Ø´ Ø¨Ù‡ Ø¨Ø§Ø²ÛŒÚ©Ù†
        }

        // Load NightScene ÛŒØ§ GameScene
        SceneManager.LoadScene("NightScene");
    }
}
public class GameSetup
{
    public ScenarioDefinition scenario;      // Ø³Ù†Ø§Ø±ÛŒÙˆÛŒ Ø§Ù†ØªØ®Ø§Ø¨â€ŒØ´Ø¯Ù‡
    public List<RoleData> selectedRoles;     // Ù†Ù‚Ø´â€ŒÙ‡Ø§ Ø¨Ø§ ØªØ¹Ø¯Ø§Ø¯ Ù†Ù‡Ø§ÛŒÛŒ
    public List<PlayerInfo> players;         // Ø¨Ø§Ø²ÛŒÚ©Ù†â€ŒÙ‡Ø§
}
public class RoleAssigner
{
    public static List<PlayerInfo> AssignRoles(GameSetup setup)
    {
        List<RoleData> roles = new List<RoleData>(setup.selectedRoles);

        // Shuffle roles
        for (int i = 0; i < roles.Count; i++)
        {
            int rand = Random.Range(i, roles.Count);
            (roles[i], roles[rand]) = (roles[rand], roles[i]);
        }

        // Assign roles
        for (int i = 0; i < setup.players.Count; i++)
        {
            setup.players[i].assignedRole = roles[i];
        }

        return setup.players;
    }
}
public class GameManager : MonoBehaviour
{
    public GameSetup setup;

    public void StartGame()
    {
        var playersWithRoles = RoleAssigner.AssignRoles(setup);

        foreach (var p in playersWithRoles)
        {
            Debug.Log($"{p.playerName} Ù†Ù‚Ø´ {p.assignedRole.displayName} Ú¯Ø±ÙØª");
        }

        // ÙˆØ±ÙˆØ¯ Ø¨Ù‡ Ø´Ø¨ Ø§ÙˆÙ„
        UnityEngine.SceneManagement.SceneManager.LoadScene("NightScene");
    }
}
public abstract class RoleAction : ScriptableObject
{
    public abstract void Execute(PlayerInfo actor, List<PlayerInfo> players);
}
[CreateAssetMenu(menuName = "Roles/DoctorAction")]
public class DoctorAction : RoleAction
{
    public override void Execute(PlayerInfo actor, List<PlayerInfo> players)
    {
        Debug.Log("Ø¯Ú©ØªØ± ÛŒÚ© Ù†ÙØ± Ø±Ø§ Ø¯Ø±Ù…Ø§Ù† Ú©Ø±Ø¯");
    }
}
public class ScenarioDefinition : ScriptableObject
{
    public string id;
    public string displayName;
    public RoleData[] allowedRoles;
    public RoleAction[] nightOrder;   // ØªØ±ØªÛŒØ¨ Ù†Ù‚Ø´â€ŒÙ‡Ø§ Ø¯Ø± Ø´Ø¨
}
public class NightManager : MonoBehaviour
{
    public GameSetup setup;

    public void RunNight()
    {
        foreach (var action in setup.scenario.nightOrder)
        {
            foreach (var player in setup.players)
            {
                if (player.assignedRole.nightAction == action)
                {
                    action.Execute(player, setup.players);
                }
            }
        }
    }
}
