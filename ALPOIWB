using UnityEngine;
using UnityEngine.UI;
using System.Collections.Generic;

public enum GroupRole {
    Leader,
    Deputy,
    Member
}

[System.Serializable]
public class GroupMember
{
    public string username;
    public int trophies;
    public Sprite avatar;
    public GroupRole role;
}

public class GroupManager : MonoBehaviour
{
    public Transform memberListParent;
    public GameObject memberCardPrefab;

    public void DisplayMembers(List < GroupMember > members) {
        foreach (Transform child in memberListParent)
        Destroy(child.gameObject);

        foreach (var member in members) {
            GameObject card = Instantiate(memberCardPrefab, memberListParent);
            card.transform.Find("Username").GetComponent < Text > ().text = member.username;
            card.transform.Find("Trophy").GetComponent < Text > ().text = member.trophies.ToString();
            card.transform.Find("Avatar").GetComponent < Image > ().sprite = member.avatar;
            card.transform.Find("Role").GetComponent < Text > ().text = member.role.ToString();
        }
    }
}
