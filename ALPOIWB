 using UnityEngine;
using UnityEngine.UI;
using System.Collections.Generic;

public enum RoleType { Mafia, Citizen, Independent }

[System.Serializable]
public class Role
{
    public string name;
    public Sprite icon;
    public RoleType type;
    public int count;
}

public class ScenarioBuilder : MonoBehaviour
{
    public List<Role> allRoles;
    public Transform mafiaPanel;
    public Transform citizenPanel;
    public Transform independentPanel;
    public GameObject roleCardPrefab;

    public Text mafiaCountText;
    public Text citizenCountText;
    public Text independentCountText;

    void Start()
    {
        DisplayRoles();
        UpdateSummary();
    }

    void DisplayRoles()
    {
        foreach (var role in allRoles)
        {
            Transform parent = role.type switch
            {
                RoleType.Mafia => mafiaPanel,
                RoleType.Citizen => citizenPanel,
                RoleType.Independent => independentPanel,
                _ => null
            };

            GameObject card = Instantiate(roleCardPrefab, parent);
            card.transform.Find("RoleName").GetComponent<Text>().text = role.name;
            card.transform.Find("RoleImage").GetComponent<Image>().sprite = role.icon;
            card.transform.Find("CountDisplay").GetComponent<Text>().text = role.count.ToString();

            Button addBtn = card.transform.Find("Btn_Add").GetComponent<Button>();
            Button removeBtn = card.transform.Find("Btn_Remove").GetComponent<Button>();

            addBtn.onClick.AddListener(() => { role.count++; UpdateCard(card, role); UpdateSummary(); });
            removeBtn.onClick.AddListener(() => { if (role.count > 0) role.count--; UpdateCard(card, role); UpdateSummary(); });
        }
    }

    void UpdateCard(GameObject card, Role role)
    {
        card.transform.Find("CountDisplay").GetComponent<Text>().text = role.count.ToString();
    }

    void UpdateSummary()
    {
        int mafia = 0, citizen = 0, independent = 0;
        foreach (var role in allRoles)
        {
            switch (role.type)
            {
                case RoleType.Mafia: mafia += role.count; break;
                case RoleType.Citizen: citizen += role.count; break;
                case RoleType.Independent: independent += role.count; break;
            }
        }

        mafiaCountText.text = "Ù…Ø§ÙÛŒØ§: " + mafia;
        citizenCountText.text = "Ø´Ù‡Ø±ÙˆÙ†Ø¯: " + citizen;
        independentCountText.text = "Ù…Ø³ØªÙ‚Ù„: " + independent;
    }
}
