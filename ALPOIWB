using UnityEngine;
using UnityEngine.UI;
using System.Collections.Generic;

[System.Serializable]
public class ShopItem
{
    public string name;
    public Sprite icon;
    public int amount;
    public int price;
    public string currency; // "gems" or "toman"
    public bool isGift;
}

public class ShopManager : MonoBehaviour
{
    public Text coinsText;
    public Text gemsText;
    public Transform coinSection;
    public Transform gemSection;
    public Transform giftSection;
    public GameObject itemCardPrefab;

    public void SetPlayerBalance(int coins, int gems) {
        coinsText.text = coins.ToString();
        gemsText.text = gems.ToString();
    }

    public void DisplayItems(List < ShopItem > items) {
        foreach (Transform child in coinSection) Destroy(child.gameObject);
        foreach (Transform child in gemSection) Destroy(child.gameObject);
        foreach (Transform child in giftSection) Destroy(child.gameObject);

        foreach (var item in items) {
            Transform parent = item.isGift ? giftSection : (item.currency == "gems" ? coinSection : gemSection);
            GameObject card = Instantiate(itemCardPrefab, parent);
            card.transform.Find("ItemName").GetComponent < Text > ().text = item.name;
            card.transform.Find("ItemAmount").GetComponent < Text > ().text = item.amount.ToString();
            card.transform.Find("ItemPrice").GetComponent < Text > ().text = item.price + (item.currency == "gems" ? " ğŸ’" : " ØªÙˆÙ…Ø§Ù†");
            card.transform.Find("ItemIcon").GetComponent < Image > ().sprite = item.icon;
        }
    }

    public void OnBuyItem(ShopItem item) {
        Debug.Log($"Ø®Ø±ÛŒØ¯ Ø¢ÛŒØªÙ…: {item.name} Ø¨Ø§ Ù‚ÛŒÙ…Øª {item.price} {item.currency}");
        // Ø§ØªØµØ§Ù„ Ø¨Ù‡ Ø³ÛŒØ³ØªÙ… Ù¾Ø±Ø¯Ø§Ø®Øª ÛŒØ§ Ú©Ø§Ù‡Ø´ Ø¬Ù…
    }
}
using UnityEngine;
using UnityEngine.UI;
using System.Collections.Generic;

[System.Serializable]
public class GemPackage
{
    public int gems;
    public int priceToman;
}

[System.Serializable]
public class EmojiPack
{
    public int emojis;
    public int priceGems;
}

[System.Serializable]
public class DailyReward
{
    public int day;
    public int coins;
    public bool claimed;
}

public class SpecialShopManager : MonoBehaviour
{
    public Text coinsText;
    public Text gemsText;
    public Transform gemSection;
    public Transform emojiSection;
    public Transform dailyRewardSection;
    public GameObject gemCardPrefab;
    public GameObject emojiCardPrefab;
    public GameObject rewardCardPrefab;

    public void SetBalance(int coins, int gems) {
        coinsText.text = coins.ToString();
        gemsText.text = gems.ToString();
    }

    public void DisplayGemPackages(List < GemPackage > packages) {
        foreach (Transform child in gemSection) Destroy(child.gameObject);
        foreach (var pack in packages) {
            GameObject card = Instantiate(gemCardPrefab, gemSection);
            card.transform.Find("GemAmount").GetComponent < Text > ().text = pack.gems.ToString();
            card.transform.Find("Price").GetComponent < Text > ().text = pack.priceToman + " ØªÙˆÙ…Ø§Ù†";
        }
    }

    public void DisplayEmojiPacks(List < EmojiPack > packs) {
        foreach (Transform child in emojiSection) Destroy(child.gameObject);
        foreach (var pack in packs) {
            GameObject card = Instantiate(emojiCardPrefab, emojiSection);
            card.transform.Find("EmojiCount").GetComponent < Text > ().text = pack.emojis.ToString();
            card.transform.Find("Price").GetComponent < Text > ().text = pack.priceGems + " ğŸ’";
        }
    }

    public void DisplayDailyRewards(List < DailyReward > rewards) {
        foreach (Transform child in dailyRewardSection) Destroy(child.gameObject);
        foreach (var reward in rewards) {
            GameObject card = Instantiate(rewardCardPrefab, dailyRewardSection);
            card.transform.Find("DayLabel").GetComponent < Text > ().text = "Ø±ÙˆØ² " + reward.day;
            card.transform.Find("CoinAmount").GetComponent < Text > ().text = reward.coins.ToString();
            card.transform.Find("Status").GetComponent < Text > ().text = reward.claimed ? "âœ…" : "â³";
        }
    }
}
