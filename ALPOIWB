      using UnityEngine;
using UnityEngine.UI;
using System.Collections.Generic;

[System.Serializable]
public class ShopItem
{
    public string name;
    public Sprite icon;
    public int amount;
    public int price;
    public string currency; // "gems" or "toman"
    public bool isGift;
}

public class ShopManager : MonoBehaviour
{
    public Text coinsText;
    public Text gemsText;
    public Transform coinSection;
    public Transform gemSection;
    public Transform giftSection;
    public GameObject itemCardPrefab;

    public void SetPlayerBalance(int coins, int gems)
    {
        coinsText.text = coins.ToString();
        gemsText.text = gems.ToString();
    }

    public void DisplayItems(List<ShopItem> items)
    {
        foreach (Transform child in coinSection) Destroy(child.gameObject);
        foreach (Transform child in gemSection) Destroy(child.gameObject);
        foreach (Transform child in giftSection) Destroy(child.gameObject);

        foreach (var item in items)
        {
            Transform parent = item.isGift ? giftSection : (item.currency == "gems" ? coinSection : gemSection);
            GameObject card = Instantiate(itemCardPrefab, parent);
            card.transform.Find("ItemName").GetComponent<Text>().text = item.name;
            card.transform.Find("ItemAmount").GetComponent<Text>().text = item.amount.ToString();
            card.transform.Find("ItemPrice").GetComponent<Text>().text = item.price + (item.currency == "gems" ? " ğŸ’" : " ØªÙˆÙ…Ø§Ù†");
            card.transform.Find("ItemIcon").GetComponent<Image>().sprite = item.icon;
        }
    }

    public void OnBuyItem(ShopItem item)
    {
        Debug.Log($"Ø®Ø±ÛŒØ¯ Ø¢ÛŒØªÙ…: {item.name} Ø¨Ø§ Ù‚ÛŒÙ…Øª {item.price} {item.currency}");
        // Ø§ØªØµØ§Ù„ Ø¨Ù‡ Ø³ÛŒØ³ØªÙ… Ù¾Ø±Ø¯Ø§Ø®Øª ÛŒØ§ Ú©Ø§Ù‡Ø´ Ø¬Ù…
    }
}
using UnityEngine;
