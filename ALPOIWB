public enum LobbyMode {
    All,
    Private,
    Detective,
    Commando
}

[System.Serializable]
public class LobbyInfo
{
    public string name;
    public string creator;
    public int players;
    public int spectators;
    public LobbyMode mode;
}

public class LobbyListManager : MonoBehaviour
{
    public Transform lobbyListParent;
    public GameObject lobbyCardPrefab;

    public void DisplayLobbies(List < LobbyInfo > lobbies) {
        foreach (Transform child in lobbyListParent)
        Destroy(child.gameObject);

        foreach (var lobby in lobbies) {
            GameObject card = Instantiate(lobbyCardPrefab, lobbyListParent);
            card.transform.Find("LobbyName").GetComponent < Text > ().text = lobby.name;
            card.transform.Find("Creator").GetComponent < Text > ().text = lobby.creator;
            card.transform.Find("PlayerCount").GetComponent < Text > ().text = $"{lobby.players} Ø¨Ø§Ø²ÛŒÚ©Ù† / {lobby.spectators} ØªÙ…Ø§Ø´Ø§Ú¯Ø±";
            card.transform.Find("Mode").GetComponent < Text > ().text = lobby.mode.ToString();
        }
    }
}
